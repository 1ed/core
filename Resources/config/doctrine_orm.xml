<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="api.doctrine.metadata_factory" class="Doctrine\Common\Persistence\Mapping\ClassMetadataFactory" public="false">
            <factory service="doctrine.orm.default_entity_manager" method="getMetadataFactory" />
        </service>

        <service id="api.doctrine.event_subscriber" class="Dunglas\JsonLdApiBundle\Doctrine\EventSubscriber">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="doctrine" />

            <tag name="kernel.event_subscriber" />
        </service>

        <service id="api.doctrine.orm.data_provider" class="Dunglas\JsonLdApiBundle\Doctrine\Orm\DataProvider" public="false">
            <argument type="service" id="api.router" />
            <argument type="service" id="doctrine" />
            <argument type="service" id="property_accessor" />

            <call method="initDataProvider">
                <argument type="service" id="api.data_provider" />
            </call>

            <tag name="api.data_provider" />
        </service>
    </services>

</container>
