<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="dunglas_json_ld_api.resources" class="Dunglas\JsonLdApiBundle\Resources" />

        <service id="dunglas_json_ld_api.routing.resources_loader" class="Dunglas\JsonLdApiBundle\Routing\ResourcesLoader">
            <argument type="service" id="dunglas_json_ld_api.resources" />

            <tag name="routing.loader" />
        </service>

        <service id="dunglas_json_ld_api.entrypoint_builder" class="Dunglas\JsonLdApiBundle\EntrypointBuilder">
            <argument type="service" id="dunglas_json_ld_api.resources" />
            <argument type="service" id="router" />
        </service>

        <service id="dunglas_json_ld_api.api_documentation_builder" class="Dunglas\JsonLdApiBundle\ApiDocumentationBuilder">
            <argument type="service" id="dunglas_json_ld_api.resources" />
            <argument type="service" id="router" />
            <argument type="service" id="dunglas_json_ld_api.mapping.class_metadata_factory" />
            <argument>%dunglas_json_ld_api.title%</argument>
            <argument>%dunglas_json_ld_api.description%</argument>
        </service>

        <service id="dunglas_json_ld_api.json_ld_normalizer" class="Dunglas\JsonLdApiBundle\Serializer\JsonLdNormalizer" public="false">
            <argument type="service" id="dunglas_json_ld_api.resources" />
            <argument type="service" id="router" />
            <argument type="service" id="dunglas_json_ld_api.mapping.class_metadata_factory" />

            <tag name="serializer.normalizer" />
        </service>

        <service id="dunglas_json_ld_api.json_ld_encoder" class="Dunglas\JsonLdApiBundle\Serializer\JsonLdEncoder" public="false">
            <tag name="serializer.encoder" />
        </service>

        <service id="dunglas_json_ld_api.doctrine_metadata_factory" class="Doctrine\Common\Persistence\Mapping\ClassMetadataFactory" public="false">
            <factory service="doctrine.orm.default_entity_manager" method="getMetadataFactory" />
        </service>

        <service id="dunglas_json_ld_api.mapping.class_metadata_factory" class="Dunglas\JsonLdApiBundle\Mapping\ClassMetadataFactory">
            <argument type="service" id="validator" on-invalid="ignore" />
            <argument type="service" id="serializer.mapping.class_metadata_factory" on-invalid="ignore" />
            <argument type="service" id="dunglas_json_ld_api.doctrine_metadata_factory" on-invalid="ignore" />
        </service>

        <service id="dunglas_json_ld_api.context_builder" class="Dunglas\JsonLdApiBundle\ContextBuilder">
            <argument type="service" id="router" />
        </service>
    </services>

</container>
